log none
echo none

variable Reset_Time equal 0
variable T_system equal 300 
variable Timestep equal 0.003
variable Run equal 50000 
# ======begin (common information) ==== 
units		metal
atom_style	atomic
boundary   p p p 
# === generate crd =====
read_data	crd_1500_01_1
#=== masses, groups ===
mass 1 63.546000 
group Cu type 1 
mass 2 39.948000 
group Ar type 2 

timestep	${Timestep} 
reset_timestep	${Reset_Time} 
thermo	100

#= interaction ===
neighbor	5.0 bin
neigh_modify	every 1 delay 0 check yes 
write_restart restart_file0
clear

#  ====== end of initial steps ============== 
read_restart restart_file*
pair_style hybrid lj/cut 10.  eam
pair_coeff 1 1 eam Cu_u3.eam 
pair_coeff 1 2 lj/cut 0.0123 3.76  
pair_coeff 2 2 lj/cut 0.0123 3.76 

#=== clusters control ===
compute  clu5 all cluster/atom 5.0
compute  clu8 all cluster/atom 8.0
compute  ke1 all ke/atom 
compute  pe1 all pe/atom pair
fix fff all ave/atom 5 1 5 c_pe1


dump   clust_dump all custom 5 dump/dmp_clust*.txt id type c_clu5  c_ke1

#=== temperature control ===
fix	t_Ar Ar temp/rescale 20 ${T_system} ${T_system} 20 0.5 
fix		nve_fix all nve 

#dump d1 all custom 5 dump.* id x y z vx vy vz

thermo 100
#run 1000000