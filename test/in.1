variable Reset_Time equal 40000000 
variable T_system equal 300 
variable Timestep equal 0.004
variable Run equal 50 
# ======begin (common information) ==== 
units		metal
atom_style	atomic
boundary   p p p 
# === generate crd =====
read_data	crd.lmp 
#=== masses, groups ===
mass 1 63.546000 
group Cu type 1 
mass 2 39.948000 
group Ar type 2 

#= interaction ===
neighbor	5.0 bin
neigh_modify	every 1 delay 0 check yes 
 
pair_style hybrid lj/cut 10.  eam
pair_coeff 1 1 eam /home/vorontsov/work/Cu_u3.eam 
pair_coeff 1 2 lj/cut 0.0123 3.76  
pair_coeff 2 2 lj/cut 0.0123 3.76 
 
timestep	${Timestep} 
reset_timestep	${Reset_Time} 
thermo	100
 
#=== clusters control ===
#compute 	cff all ngbr/atom 3.5 3
#compute  clu all cluster/en/atom 7.0

compute  ke all ke/atom 
compute  pe all pe/atom 
variable b atom c_ke+c_pe
compute  clu all cluster/ave/atom 7.0 c_ke 
compute  cluu all cluster/ave/atom 7.0  

compute  clus all cluster/atom 7.0

